// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Usuario {
  id Int @id @default(autoincrement())
  nome String
  email String @unique
  senha String
  curriculo Curriculo?
  endereco Endereco?
}

model Curriculo {
  id Int @id @default(autoincrement())
  idDoUsuario Int @unique
  usuario Usuario @relation(fields: [idDoUsuario], references: [id])
  experiencias Experiencia[]
  formacao Formacao[]
  hardSkills HardSkill[]
  sofSkills SoftSkil[]
  linguas Lingua[]
}

model Endereco {
  id Int @id @default(autoincrement())
  usuario Usuario @relation(references: [id], fields: [idDoUsuario])
  idDoUsuario Int @unique
  CEP String
  bairro String
  logradouro String
  numero Int
  complemento String?
}

model Experiencia {
  id Int @id @default(autoincrement())
  nome String
  descricao String?
  inicio DateTime
  fim DateTime
  empresa String
  curriculoId Int @unique
  curriculo Curriculo @relation(fields: [curriculoId], references: [id])
}

model Formacao {
  id Int @id @default(autoincrement())
  descricao String
  inicio DateTime
  fim DateTime
  curriculoId Int @unique
  curriculo Curriculo @relation(fields: [curriculoId], references: [id])
}

model HardSkill {
  id Int @id @default(autoincrement())
  nome String
  descricao String?
  curriculoId Int @unique
  curriculo Curriculo @relation(fields: [curriculoId], references: [id])
}

model SoftSkil {
  id Int @id @default(autoincrement())
  nome String
  descricao String?
  curriculoId Int @unique
  curriculo Curriculo @relation(fields: [curriculoId], references: [id])
}

model Lingua {
  id Int @id @default(autoincrement())
  nome String
  fluencia String
  curriculoId Int @unique
  curriculo Curriculo @relation(fields: [curriculoId], references: [id])
}